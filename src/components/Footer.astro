---
const year = new Date().getFullYear();

const socialLinks = [
  { href: 'https://x.com/vheissu_', label: 'X' },
  { href: 'https://www.linkedin.com/in/vheissu/', label: 'LinkedIn' },
  { href: 'https://www.instagram.com/vheissudotme', label: 'Instagram' },
];
---

<footer class="py-8 text-sm text-text-secondary">
  <div class="flex flex-col sm:flex-row justify-between gap-4">
    <div class="flex gap-4">
      {socialLinks.map(link => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-text-primary transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-text-secondary focus-visible:ring-offset-2 focus-visible:ring-offset-background rounded-sm"
        >
          {link.label}
        </a>
      ))}
    </div>
    <div class="flex gap-4">
      <a href="mailto:hello@vheissu.me" class="hover:text-text-primary transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-text-secondary focus-visible:ring-offset-2 focus-visible:ring-offset-background rounded-sm">
        hello@vheissu.me
      </a>
      <span>&copy; {year} Ivan Uruchurtu</span>
    </div>
  </div>
</footer>
