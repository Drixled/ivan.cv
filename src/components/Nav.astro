---
import ShapesGlow from './ShapesGlow';

const currentPath = Astro.url.pathname;

const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/playground', label: 'Playground' },
  { href: '/styleguide', label: 'Style Guide' },
];
---

<nav class="px-6 py-8 max-w-3xl mx-auto w-full relative">
  <ShapesGlow client:load transition:persist="shapes-glow" />
  <ul class="flex gap-6 text-sm relative">
    {links.map(link => (
      <li>
        <a
          href={link.href}
          class:list={[
            "transition-colors hover:text-text-primary",
            currentPath === link.href ? "text-text-primary" : "text-text-secondary"
          ]}
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
