---
import ShapesGlow from './ShapesGlow.astro';

const currentPath = Astro.url.pathname;

const links = [
  { href: '/about', label: 'About' },
  { href: '/playground', label: 'Playground' },
  { href: '/cv', label: 'CV', external: true },
  { href: '/styleguide', label: 'Style Guide' },
];
---

<nav class="px-6 py-8 max-w-6xl mx-auto w-full relative">
  <ShapesGlow />
  <div class="flex justify-between items-center relative">
    <a href="/" class="text-sm text-text-primary hover:text-text-secondary transition-colors">
      Iv√°n Uruchurtu
    </a>
    <ul class="flex gap-6 text-sm">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class:list={[
              "transition-colors hover:text-text-primary",
              currentPath === link.href ? "text-text-primary" : "text-text-secondary"
            ]}
            {...(link.external ? { target: "_blank", rel: "noopener noreferrer" } : {})}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
