---
interface Props {
  title: string;
  company: string;
  period: string;
  role: string;
  thumbnail?: string;
  slug: string;
}

const { title, company, period, role, thumbnail, slug } = Astro.props;
---

<a
  href={`/project/${slug}`}
  class="group block bg-card rounded-lg p-4 hover:bg-card/80 transition-colors"
>
  {thumbnail && (
    <div class="aspect-video rounded-md overflow-hidden mb-4 bg-background">
      <img
        src={thumbnail}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}
  <h3 class="text-text-primary font-medium mb-1">{title}</h3>
  <p class="text-text-secondary text-sm">
    {company} &middot; {period}
  </p>
  <p class="text-text-secondary text-sm">{role}</p>
</a>
