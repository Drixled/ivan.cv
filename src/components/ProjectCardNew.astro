---
interface Props {
  title: string;
  role: string;
  period: string;
  thumbnail?: string;
  slug?: string;
  bento?: boolean;
}

const { title, role, period, thumbnail, slug, bento = false } = Astro.props;
---

<a href={slug ? `/project/${slug}` : '#'} class:list={["group block", bento && "h-full"]} data-astro-prefetch="hover">
  <div class:list={["bg-card p-2 rounded-3xl flex flex-col gap-3 border border-white/[0.03]", bento && "h-full"]}>
    <!-- Thumbnail Container -->
    <div class:list={["relative bg-background rounded-2xl overflow-hidden", bento ? "flex-1 min-h-0" : "h-[338px]"]}>
      <!-- Image -->
      {thumbnail ? (
        <img
          src={thumbnail}
          alt={title}
          class:list={[
            "absolute top-0 left-0 right-0 z-10 w-full object-cover rounded-2xl transition-all duration-300",
            bento ? "h-full group-hover:h-[calc(100%-32px)]" : "h-[338px] group-hover:h-[306px]"
          ]}
        />
      ) : (
        <div class:list={[
          "absolute top-0 left-0 right-0 z-10 w-full bg-[#121212] rounded-2xl transition-all duration-300",
          bento ? "h-full group-hover:h-[calc(100%-32px)]" : "h-[338px] group-hover:h-[306px]"
        ]}>
          <div class="w-full h-full bg-gradient-to-br from-orange-900/30 via-red-900/20 to-purple-900/30 rounded-2xl"></div>
        </div>
      )}

      <!-- Role Badge -->
      <div class="absolute bottom-0 left-0 right-0 px-2.5 pt-1 pb-2 flex justify-between items-center">
        <p class="text-xs uppercase tracking-[1.2px] font-mono gradient-text">
          {role}
        </p>
        <p class="text-xs uppercase tracking-[1.2px] text-text-secondary/70 font-mono">
          {period}
        </p>
      </div>
    </div>

    <!-- Meta -->
    <div class="relative flex items-end justify-between px-1 pb-1">
      <h3 class="text-[32px] font-display font-light text-text-primary leading-8 tracking-tight">
        {title}
      </h3>

      <!-- Arrow Button -->
      <div class="bg-card-hover p-1 rounded-2xl group-hover:bg-[#252525] transition-colors">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-text-primary">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</a>

<style>
  .gradient-text {
    background: linear-gradient(
      156deg,
      rgba(215, 251, 219, 0.7) 4%,
      rgba(202, 249, 253, 0.7) 49%,
      rgba(244, 207, 255, 0.7) 101%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
