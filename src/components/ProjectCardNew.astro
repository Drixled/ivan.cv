---
interface Props {
  title: string;
  role: string;
  period: string;
  thumbnail?: string;
  slug?: string;
}

const { title, role, period, thumbnail, slug } = Astro.props;
---

<a href={slug ? `/project/${slug}` : '#'} class="group block" data-astro-prefetch="hover">
  <div class="bg-card p-2 rounded-3xl flex flex-col gap-3">
    <!-- Thumbnail Container -->
    <div class="relative bg-[#121212] border border-[#1b1b1b] rounded-2xl overflow-hidden h-[338px]">
      <!-- Image -->
      {thumbnail ? (
        <img
          src={thumbnail}
          alt={title}
          class="absolute inset-0 w-full h-[306px] object-cover rounded-2xl group-hover:scale-105 transition-transform duration-300"
        />
      ) : (
        <div class="absolute inset-0 w-full h-[306px] bg-gradient-to-br from-orange-900/30 via-red-900/20 to-purple-900/30 rounded-2xl"></div>
      )}

      <!-- Role Badge -->
      <div class="absolute bottom-0 left-0 right-0 px-2.5 py-1">
        <p class="text-xs uppercase tracking-[1.2px] font-mono gradient-text">
          {role}
        </p>
      </div>
    </div>

    <!-- Meta -->
    <div class="relative flex items-end justify-between px-1 pb-1">
      <div class="flex flex-col">
        <h3 class="text-[32px] font-medium text-text-primary leading-8 tracking-tight">
          {title}
        </h3>
        <p class="text-xs uppercase tracking-[1.2px] text-text-secondary/40 font-mono">
          {period}
        </p>
      </div>

      <!-- Arrow Button -->
      <div class="bg-[#1b1b1b] p-1 rounded-2xl group-hover:bg-[#252525] transition-colors">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="text-text-primary">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</a>

<style>
  .gradient-text {
    background: linear-gradient(
      156deg,
      rgba(215, 251, 219, 0.7) 4%,
      rgba(202, 249, 253, 0.7) 49%,
      rgba(244, 207, 255, 0.7) 101%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
