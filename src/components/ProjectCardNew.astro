---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  role: string;
  period: string;
  thumbnail?: ImageMetadata;
  slug?: string;
  bento?: boolean;
  status?: 'coming-soon' | 'published';
}

const { title, role, period, thumbnail, slug, bento = false, status = 'published' } = Astro.props;
const isComingSoon = status === 'coming-soon';

const WrapperTag = isComingSoon ? 'div' : 'a';
const wrapperProps = isComingSoon
  ? {}
  : { href: slug ? `/project/${slug}` : '#', 'data-astro-prefetch': 'hover' };
---

<WrapperTag
  {...wrapperProps}
  class:list={[
    "group block rounded-3xl",
    bento && "h-full",
    isComingSoon ? "cursor-not-allowed" : "focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-text-secondary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
  ]}
>
  <div class:list={["bg-card p-2 rounded-3xl flex flex-col gap-3 border border-white/[0.03]", bento && "h-full"]}>
    <!-- Thumbnail Container -->
    <div class:list={["relative bg-background rounded-2xl overflow-hidden", bento ? "flex-1 min-h-0" : "aspect-[4/3] sm:aspect-[16/10]"]}>
      <!-- Image -->
      {thumbnail ? (
        <Image
          src={thumbnail}
          alt={title}
          widths={[400, 800, 1200]}
          sizes="(max-width: 768px) 100vw, 50vw"
          format="webp"
          quality={85}
          loading="lazy"
          class:list={[
            "absolute top-0 left-0 right-0 z-10 w-full object-cover rounded-2xl transition-[height] duration-300 h-full",
            !isComingSoon && "group-hover:h-[calc(100%-32px)]"
          ]}
        />
      ) : (
        <div class:list={[
          "absolute top-0 left-0 right-0 z-10 w-full bg-[#121212] rounded-2xl transition-[height] duration-300 h-full",
          !isComingSoon && "group-hover:h-[calc(100%-32px)]"
        ]}>
          <div class="w-full h-full bg-gradient-to-br from-orange-900/30 via-red-900/20 to-purple-900/30 rounded-2xl"></div>
        </div>
      )}

      <!-- Coming Soon Badge -->
      {isComingSoon && (
        <div class="absolute top-3 right-3 z-20">
          <span class="px-2 py-1 text-[10px] uppercase tracking-wider font-mono bg-white/10 backdrop-blur-sm text-text-primary/80 rounded-full border border-white/10">
            Coming Soon
          </span>
        </div>
      )}

      <!-- Role Badge -->
      <div class="absolute bottom-0 left-0 right-0 px-2.5 pt-1 pb-2 flex justify-between items-center">
        <p class="text-xs uppercase tracking-[1.2px] font-mono gradient-text">
          {role}
        </p>
        <p class="text-xs uppercase tracking-[1.2px] text-text-secondary/70 font-mono">
          {period}
        </p>
      </div>
    </div>

    <!-- Meta -->
    <div class="relative flex items-end justify-between px-1 pb-1">
      <h3 class="text-2xl sm:text-[28px] md:text-[32px] font-display font-light text-text-primary leading-7 sm:leading-8 tracking-tight">
        {title}
      </h3>

      <!-- Arrow Button -->
      <div class:list={["bg-card-hover p-1 rounded-2xl transition-colors", !isComingSoon && "group-hover:bg-[#252525]"]}>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class:list={["text-text-primary", isComingSoon && "opacity-40"]} aria-hidden="true">
          <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</WrapperTag>

<style>
  .gradient-text {
    background: linear-gradient(
      156deg,
      rgba(215, 251, 219, 0.7) 4%,
      rgba(202, 249, 253, 0.7) 49%,
      rgba(244, 207, 255, 0.7) 101%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
