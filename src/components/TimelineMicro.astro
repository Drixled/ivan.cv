---
import { timeline } from '../data/timeline';
---

<div class="timeline-micro">
  {timeline.map((item, index) => (
    <div
      class="timeline-micro-item fade-stagger"
      data-stagger={index + 9}
      data-current={item.current ? "true" : "false"}
    >
      <div class="timeline-micro-content">
        <span class="timeline-micro-company">{item.company}</span>
        <span class="timeline-micro-role">{item.role}</span>
        <span class="timeline-micro-dates">{item.dates}</span>
      </div>
    </div>
  ))}
</div>

<style>
  .timeline-micro {
    position: relative;
    padding-left: 20px;
  }

  .timeline-micro::before {
    content: "";
    position: absolute;
    left: 0;
    top: 6px;
    bottom: 6px;
    width: 1px;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--color-text-secondary) 12px,
      var(--color-text-secondary) calc(100% - 12px),
      transparent
    );
    opacity: 0.3;
  }

  .timeline-micro-item {
    position: relative;
    padding: 8px 0;
  }

  /* Timeline dot */
  .timeline-micro-item::before {
    content: "";
    position: absolute;
    left: -20px;
    top: 14px;
    width: 7px;
    height: 7px;
    border-radius: 50%;
    transform: translateX(-50%);
    border: 1.5px solid var(--color-text-secondary);
    background: var(--color-background);
  }

  /* Current role dot - filled */
  .timeline-micro-item[data-current="true"]::before {
    background: var(--color-text-primary);
    border-color: var(--color-text-primary);
  }

  .timeline-micro-content {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: 0.5rem;
  }

  .timeline-micro-company {
    color: var(--color-text-primary);
    font-weight: 500;
    font-size: 0.9375rem;
  }

  .timeline-micro-role {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .timeline-micro-dates {
    font-family: var(--font-mono, ui-monospace, monospace);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    opacity: 0.7;
    margin-left: auto;
  }
</style>
