---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCardNew from '../components/ProjectCardNew.astro';

const colors = [
  { name: 'Background', value: '#000000', cssVar: '--color-background' },
  { name: 'Card', value: '#0D0D0D', cssVar: '--color-card' },
  { name: 'Text Primary', value: '#A6ABA4', cssVar: '--color-text-primary' },
  { name: 'Text Secondary', value: '#6B7468', cssVar: '--color-text-secondary' },
];

const spacingScale = [
  { name: 'gap-1', value: '4px', width: 4 },
  { name: 'gap-2', value: '8px', width: 8 },
  { name: 'gap-4', value: '16px', width: 16 },
  { name: 'gap-6', value: '24px', width: 24 },
  { name: 'gap-8', value: '32px', width: 32 },
  { name: 'gap-12', value: '48px', width: 48 },
];

const codeExample = `function greet(name: string) {
  return \`Hello, \${name}!\`;
}`;

const sections = [
  { id: 'inspector', label: 'Inspector' },
  { id: 'typography', label: 'Typography' },
  { id: 'fonts', label: 'Fonts' },
  { id: 'colors', label: 'Colors' },
  { id: 'spacing', label: 'Spacing' },
  { id: 'buttons', label: 'Buttons' },
  { id: 'project-card', label: 'Project Card' },
  { id: 'code', label: 'Code' },
  { id: 'selection', label: 'Selection' },
];
---

<BaseLayout title="Style Guide | Ivan Uruchurtu">
  <div class="py-12">
    <header class="mb-12">
      <h1 class="text-2xl font-medium text-text-primary mb-2">Style Guide</h1>
      <p class="text-text-secondary mb-8">Internal reference for typography, colors, and components.</p>

      <nav class="flex flex-wrap gap-2">
        {sections.map((section) => (
          <a
            href={`#${section.id}`}
            class="text-sm px-3 py-1.5 bg-card rounded-md text-text-secondary hover:text-text-primary hover:bg-card/80 transition-colors"
          >
            {section.label}
          </a>
        ))}
      </nav>
    </header>

    <div class="space-y-8">
      <!-- Inspector UI -->
      <section id="inspector" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Design Inspector UI</h2>
        <p class="text-text-secondary text-sm mb-6">Styles panel and tokens console components.</p>

        <div class="flex gap-6 flex-wrap">
          <!-- Styles Panel Mock -->
          <div class="styles-panel-preview">
            <div class="panel-header">
              <span class="panel-title">
                Styles: <span class="element-tag">h1</span>
              </span>
              <button class="panel-close">×</button>
            </div>
            <div class="panel-content">
              <div class="style-row">
                <span class="style-prop">color</span>
                <div class="color-row">
                  <input type="color" class="style-color" value="#a6aba4" />
                  <input type="text" class="style-input" value="#a6aba4" />
                </div>
              </div>
              <div class="style-row">
                <span class="style-prop">font-size</span>
                <input type="text" class="style-input" value="72px" />
              </div>
              <div class="style-row">
                <span class="style-prop">font-weight</span>
                <input type="range" class="style-slider" min="100" max="900" value="400" />
                <span class="style-value">400</span>
              </div>
              <div class="style-row">
                <span class="style-prop">line-height</span>
                <input type="text" class="style-input" value="1.15" />
              </div>
              <div class="style-row">
                <span class="style-prop">letter-spacing</span>
                <input type="text" class="style-input" value="0px" />
              </div>
            </div>
          </div>

          <!-- Tokens Console Mock -->
          <div class="tokens-console-preview">
            <div class="console-header">
              <span class="console-title">Tokens API</span>
              <div class="console-right">
                <div class="build-status">
                  <div class="build-dot"></div>
                  <span>Ready</span>
                </div>
                <button class="console-close">×</button>
              </div>
            </div>
            <div class="console-body">
              <div class="console-line">
                <span class="time">12:34:56</span>
                <span class="method patch">PATCH</span>
                <span class="endpoint">/tokens/<span class="token">hero.title</span>.color</span>
                <span class="value">#ff5500</span>
              </div>
              <div class="console-line">
                <span class="time">12:34:58</span>
                <span class="method patch">PATCH</span>
                <span class="endpoint">/tokens/<span class="token">hero.title</span>.fontSize</span>
                <span class="value">80px</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <style>
        /* Styles Panel Preview */
        .styles-panel-preview {
          width: 280px;
          background: #111;
          border: 1px solid #222;
          border-radius: 8px;
          box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
          overflow: hidden;
          font-family: 'JetBrains Mono', ui-monospace, monospace;
        }

        .styles-panel-preview .panel-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 0.6rem 0.8rem;
          background: #0d0d0d;
          border-bottom: 1px solid #1a1a1a;
        }

        .styles-panel-preview .panel-title {
          font-size: 0.7rem;
          color: #888;
          display: flex;
          align-items: center;
          gap: 0.5rem;
        }

        .styles-panel-preview .element-tag {
          color: #d7ba7d;
        }

        .styles-panel-preview .panel-close {
          background: none;
          border: none;
          color: #555;
          cursor: pointer;
          font-size: 1rem;
          line-height: 1;
          padding: 0;
        }

        .styles-panel-preview .panel-content {
          padding: 0.8rem;
        }

        .styles-panel-preview .style-row {
          display: flex;
          align-items: center;
          margin-bottom: 0.6rem;
          gap: 0.5rem;
        }

        .styles-panel-preview .style-row:last-child {
          margin-bottom: 0;
        }

        .styles-panel-preview .style-prop {
          color: #9cdcfe;
          font-size: 0.7rem;
          width: 75px;
          flex-shrink: 0;
        }

        .styles-panel-preview .style-input {
          flex: 1;
          background: #0a0a0a;
          border: 1px solid #222;
          border-radius: 3px;
          padding: 0.4rem 0.5rem;
          color: #ce9178;
          font-family: inherit;
          font-size: 0.7rem;
          outline: none;
        }

        .styles-panel-preview .color-row {
          display: flex;
          gap: 0.4rem;
          flex: 1;
        }

        .styles-panel-preview .style-color {
          -webkit-appearance: none;
          appearance: none;
          width: 28px;
          height: 28px;
          border: 1px solid #222;
          border-radius: 3px;
          background: transparent;
          cursor: pointer;
          padding: 0;
        }

        .styles-panel-preview .style-color::-webkit-color-swatch-wrapper {
          padding: 3px;
        }

        .styles-panel-preview .style-color::-webkit-color-swatch {
          border-radius: 2px;
          border: none;
        }

        .styles-panel-preview .style-slider {
          flex: 1;
          -webkit-appearance: none;
          appearance: none;
          height: 4px;
          background: #222;
          border-radius: 2px;
          cursor: pointer;
        }

        .styles-panel-preview .style-slider::-webkit-slider-thumb {
          -webkit-appearance: none;
          appearance: none;
          width: 14px;
          height: 14px;
          background: #e8e8e8;
          border-radius: 50%;
          cursor: pointer;
        }

        .styles-panel-preview .style-value {
          color: #ce9178;
          font-size: 0.7rem;
          min-width: 28px;
          text-align: right;
        }

        /* Tokens Console Preview */
        .tokens-console-preview {
          width: 320px;
          background: #111;
          border: 1px solid #222;
          border-radius: 8px;
          box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
          font-family: 'JetBrains Mono', ui-monospace, monospace;
          font-size: 0.65rem;
          overflow: hidden;
        }

        .tokens-console-preview .console-header {
          display: flex;
          justify-content: space-between;
          align-items: center;
          padding: 0.6rem 0.8rem;
          background: #0d0d0d;
          border-bottom: 1px solid #1a1a1a;
        }

        .tokens-console-preview .console-title {
          color: #888;
        }

        .tokens-console-preview .console-right {
          display: flex;
          align-items: center;
          gap: 0.8rem;
        }

        .tokens-console-preview .build-status {
          display: flex;
          align-items: center;
          gap: 0.4rem;
          color: #555;
        }

        .tokens-console-preview .build-dot {
          width: 6px;
          height: 6px;
          border-radius: 50%;
          background: #4caf50;
        }

        .tokens-console-preview .console-close {
          background: none;
          border: none;
          color: #555;
          cursor: pointer;
          font-size: 1rem;
          line-height: 1;
          padding: 0;
        }

        .tokens-console-preview .console-body {
          padding: 0.5rem 0;
        }

        .tokens-console-preview .console-line {
          padding: 0.2rem 0.6rem;
          display: flex;
          gap: 0.6rem;
        }

        .tokens-console-preview .time {
          color: #333;
          flex-shrink: 0;
        }

        .tokens-console-preview .method {
          flex-shrink: 0;
          padding: 0.1rem 0.3rem;
          border-radius: 2px;
          font-size: 0.6rem;
        }

        .tokens-console-preview .method.patch {
          background: #3a3a1a;
          color: #f9a825;
        }

        .tokens-console-preview .endpoint {
          color: #888;
        }

        .tokens-console-preview .token {
          color: #9cdcfe;
        }

        .tokens-console-preview .value {
          color: #ce9178;
          margin-left: auto;
          flex-shrink: 0;
        }
      </style>

      <!-- Typography -->
      <section id="typography" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Typography</h2>

        <div class="space-y-8">
          <div class="space-y-2">
            <h1 class="text-2xl font-medium text-text-primary">Heading 1 — Page Titles</h1>
            <p class="text-sm text-text-secondary opacity-60">text-2xl font-medium text-text-primary</p>
          </div>

          <div class="space-y-2">
            <h2 class="text-lg font-medium text-text-primary">Heading 2 — Section Headings</h2>
            <p class="text-sm text-text-secondary opacity-60">text-lg font-medium text-text-primary</p>
          </div>

          <div class="space-y-2">
            <h3 class="text-base font-medium text-text-primary">Heading 3 — Subsections</h3>
            <p class="text-sm text-text-secondary opacity-60">text-base font-medium text-text-primary</p>
          </div>

          <div class="space-y-2">
            <p class="text-text-secondary leading-relaxed">
              Paragraph — Body text for main content. Over the past decade, I've designed for early-stage startups across B2C, B2B, and developer tools.
            </p>
            <p class="text-sm text-text-secondary opacity-60">text-text-secondary leading-relaxed</p>
          </div>

          <div class="space-y-2">
            <p class="text-sm text-text-secondary">
              Paragraph Small — Used for metadata, descriptions, and secondary information.
            </p>
            <p class="text-sm text-text-secondary opacity-60">text-sm text-text-secondary</p>
          </div>

          <div class="space-y-2">
            <p class="text-sm uppercase tracking-wide text-text-secondary">Caption / Label</p>
            <p class="text-sm text-text-secondary opacity-60">text-sm uppercase tracking-wide text-text-secondary</p>
          </div>

          <div class="space-y-2">
            <p>
              <a href="#" class="text-text-primary underline underline-offset-2 hover:text-text-secondary transition-colors">Link — Interactive text</a>
            </p>
            <p class="text-sm text-text-secondary opacity-60">text-text-primary underline underline-offset-2 hover:text-text-secondary</p>
          </div>
        </div>
      </section>

      <!-- Fonts -->
      <section id="fonts" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Fonts</h2>

        <div class="space-y-6">
          <div class="bg-background rounded-lg p-4">
            <p class="text-text-primary text-xl mb-2 font-sans">Hanken Grotesk</p>
            <p class="text-text-secondary text-sm mb-4">Primary font for all UI and body text</p>
            <p class="text-text-primary font-sans">
              ABCDEFGHIJKLMNOPQRSTUVWXYZ<br />
              abcdefghijklmnopqrstuvwxyz<br />
              0123456789
            </p>
          </div>

          <div class="bg-background rounded-lg p-4">
            <p class="text-text-primary text-3xl mb-2 font-display">PP Editorial Old</p>
            <p class="text-text-secondary text-sm mb-4">Display font for hero sections and project card titles</p>
            <p class="text-text-primary font-display text-2xl">
              ABCDEFGHIJKLMNOPQRSTUVWXYZ<br />
              abcdefghijklmnopqrstuvwxyz<br />
              0123456789
            </p>
          </div>
        </div>
      </section>

      <!-- Colors -->
      <section id="colors" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Colors</h2>

        <div class="grid grid-cols-2 gap-4">
          {colors.map((color) => (
            <div class="space-y-2">
              <div
                class="h-16 rounded-lg border border-text-secondary/20"
                style={`background-color: ${color.value};`}
              ></div>
              <p class="text-text-primary text-sm font-medium">{color.name}</p>
              <p class="text-text-secondary text-sm">{color.value}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Spacing Scale -->
      <section id="spacing" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Spacing Scale</h2>

        <div class="space-y-3">
          {spacingScale.map((space) => (
            <div class="flex items-center gap-4">
              <div
                class="h-4 bg-text-primary rounded"
                style={`width: ${space.width * 3}px;`}
              ></div>
              <p class="text-text-secondary text-sm w-16">{space.name}</p>
              <p class="text-text-secondary text-sm opacity-60">{space.value}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Buttons -->
      <section id="buttons" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Buttons</h2>

        <div class="space-y-6">
          <div class="space-y-3">
            <p class="text-sm text-text-secondary">Primary</p>
            <div class="flex flex-wrap gap-4">
              <button class="bg-text-primary text-background px-4 py-2 rounded-lg font-medium hover:bg-text-primary/90 transition-colors">
                Primary Button
              </button>
              <button class="bg-text-primary text-background px-4 py-2 rounded-lg font-medium opacity-50 cursor-not-allowed">
                Disabled
              </button>
            </div>
            <p class="text-sm text-text-secondary opacity-60">bg-text-primary text-background px-4 py-2 rounded-lg font-medium</p>
          </div>

          <div class="space-y-3">
            <p class="text-sm text-text-secondary">Secondary</p>
            <div class="flex flex-wrap gap-4">
              <button class="border border-text-secondary text-text-primary px-4 py-2 rounded-lg font-medium hover:border-text-primary hover:bg-background transition-colors">
                Secondary Button
              </button>
              <button class="border border-text-secondary text-text-secondary px-4 py-2 rounded-lg font-medium opacity-50 cursor-not-allowed">
                Disabled
              </button>
            </div>
            <p class="text-sm text-text-secondary opacity-60">border border-text-secondary text-text-primary px-4 py-2 rounded-lg</p>
          </div>

          <div class="space-y-3">
            <p class="text-sm text-text-secondary">Ghost</p>
            <div class="flex flex-wrap gap-4">
              <button class="text-text-primary underline underline-offset-2 hover:text-text-secondary transition-colors">
                Ghost Button
              </button>
            </div>
            <p class="text-sm text-text-secondary opacity-60">text-text-primary underline underline-offset-2 (link style)</p>
          </div>
        </div>
      </section>

      <!-- Project Card -->
      <section id="project-card" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Project Card</h2>

        <div class="max-w-[500px]">
          <ProjectCardNew
            title="GMK Mictlan / Demiura"
            role="Founding Designer"
            period="2023 - 2025"
          />
        </div>
        <p class="text-sm text-text-secondary opacity-60 mt-4">New card design with gradient role text and arrow button</p>
      </section>

      <!-- Code -->
      <section id="code" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Code</h2>

        <div class="space-y-6">
          <div class="space-y-3">
            <p class="text-sm text-text-secondary">Inline Code</p>
            <p class="text-text-secondary">
              Use <code class="bg-background px-1.5 py-0.5 rounded text-sm text-text-primary">const example = true;</code> for inline snippets.
            </p>
            <p class="text-sm text-text-secondary opacity-60">bg-card px-1.5 py-0.5 rounded text-sm</p>
          </div>

          <div class="space-y-3">
            <p class="text-sm text-text-secondary">Code Block</p>
            <pre class="bg-background rounded-lg p-4 overflow-x-auto"><code class="text-sm text-text-primary">{codeExample}</code></pre>
            <p class="text-sm text-text-secondary opacity-60">bg-card rounded-lg p-4 overflow-x-auto</p>
          </div>
        </div>
      </section>

      <!-- Selection -->
      <section id="selection" class="bg-card rounded-lg p-6">
        <h2 class="text-lg font-medium text-text-primary mb-6">Selection Highlight</h2>

        <div class="bg-background rounded-lg p-4">
          <p class="text-text-secondary leading-relaxed">
            Select this text to see the highlight style. The selection uses text-secondary (#6B7468) as background with the background color (#000000) for text, creating an inverted effect.
          </p>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
